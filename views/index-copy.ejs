        <div class="container">
            <!-- Navbar brand -->
            <a class="navbar-brand" href="#carousel-container">WALL OF WISDOM</a>


            <!-- Collapse button -->
            <button class="navbar-toggler pull-right hamburger" type="button" data-toggle="collapse" data-target="#navbarSupportedContent20" aria-controls="navbarSupportedContent20"
                aria-expanded="false" aria-label="Toggle navigation">
                <div class="animated-icon1">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </button>

            <!-- Collapsible content -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent20">

                <!-- Links -->
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#carousel-slides">Quotes<span class="sr-only">(current)</span></a>
