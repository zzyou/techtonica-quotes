    <video autoplay muted loop id="wall-video">
      <source src="images/wall.mp4" type="video/mp4">
      Your browser does not support HTML5 video.
    </video>


    <!-- Start of Carousel of Quotes -->
    <div id="carousel-container" class="container">
        <div class="row">
            <div class="col-md-12">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <% for (let j = 1; j < users.length && j < 5; j++) { %>
                            <li data-target="#carousel-example-generic" data-slide-to="<% j %>"></li>
                        <% } %>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div id="carousel-slides" class="carousel-inner" role="listbox">
                        <div class="item active quotes center-block text-justified">
                            <h1><%= users[users.length-1].quote %></h1>
                            <p><%= users[users.length-1].name %></p>
                            <br>
                            <div>
                                <img class="heartEmpty pull-right" src="images/heartEmpty.png" alt="like?"/>
                                <img class="heartRed pull-right" src="images/heartRed.png" alt="like!"/>
                            </div>
                        </div>
                        <% for (let i = users.length-2; i >= 0 && i >= users.length-5; i--) { %>
                            <div class="item quotes center-block text-justified">
                                <h1><%= users[i].quote %></h1>
                                <p><%= users[i].name %></p>
                                <br>
                                <div>
                                    <img class="heartEmpty pull-right" src="images/heartEmpty.png" alt="like?"/>
                                    <img class="heartRed pull-right" src="images/heartRed.png" alt="like!"/>
                                </div>
                            </div>
                        <% } %>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- End of Carousel of Quotes -->

    <pre><h3>Post Your <b>Quote</b> on <i>The WALL OF WISDOM</i>! </h3></pre>
    <div class="container form-content">
            <form id="form" method="POST" action="/users/add">
            <br>
            <label>Quote:</label><br>
            <input type="text" name="quote" cols="40"  rows="5" style="width:500px; height:90px;">
            <br><br>
            <label>Name:</label><br>
            <input type="text" name="name">
            <br><br>
            <input id= "submit-btn" type="submit" value="Post-It!">
          </form>
    </div>

    <div class="about" id="about">
        <pre><h3><b>About</b></h3></pre><br>
        <p> This page is a place for you to add your advice for students currently enrolled in technical apprenticeships! <br>Feel free to include any anecdotes or relevant quotes  as  well!</p>
        <br><br>

    </div>

<% include partials/footer %>
